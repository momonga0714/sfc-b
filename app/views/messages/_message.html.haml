.message{data: {message: {id: message.id}}}
    .one-message 
        .one-message__name__box
            = message.user.name
        .one-message__name__day
            = message.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[Time.now.wday]}) %H:%M")
    - if message.content.present?
        .name-box
            %p.name-box__text
                = message.content
    = image_tag message.image.url, class: 'name-box__image' if message.image.present?